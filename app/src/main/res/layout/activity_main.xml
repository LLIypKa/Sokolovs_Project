<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <Button
        android:id="@+id/toOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toOrdersClick"
        android:text="To Orders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <Button
        android:id="@+id/toMetals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toMetalsClick"
        android:text="To metals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toOrders"
        app:layout_constraintVertical_bias="0.028" />

    <Button
        android:id="@+id/toStocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toStocksClick"
        android:text="To stocks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toMetals"
        app:layout_constraintVertical_bias="0.033" />

    <Button
        android:id="@+id/toSupplies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toSuppliesClick"
        android:text="To supplies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toStocks"
        app:layout_constraintVertical_bias="0.031" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewSupplyID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supply ID: " />

    <TextView
        android:id="@+id/textViewSupplierID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier ID: " />

    <TextView
        android:id="@+id/textViewMetalID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metal ID: " />

    <TextView
        android:id="@+id/textViewMetalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metal Count: " />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: " />
</LinearLayout>